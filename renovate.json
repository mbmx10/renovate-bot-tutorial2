{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 3,
  "packageRules": [
    {
      "matchPaths": ["*"],
      "separateMajorMinor": true,
      "separateMultipleMajor": true
    },
    {
      "matchPaths": ["frontend/**"],
      "additionalBranchPrefix": "frontend/",
      "commitMessageSuffix": "(frontend)"
    }
  ]
}
