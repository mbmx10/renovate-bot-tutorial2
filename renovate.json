{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 3,
  "packageRules": [
    {
      "matchUpdateTypes": ["major"],
      "dependencyDashboardApproval": true,
    },
    {
      "matchPaths": ["separate-module"],
      "additionalBranchPrefix": "separate-module/",
    }
  ]
}
