{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":separateMultipleMajorReleases",
    ":separateMajorReleases"
  ],
  "separateMinorPatch": true,
  "prHourlyLimit": 15,
  "packageRules": [
    {
      "matchPaths": ["frontend/**"],
      "additionalBranchPrefix": "frontend-major/",
      "commitMessageSuffix": "(frontend major)",
      "matchUpdateTypes": ["major"]
    },
    {
      "matchPaths": ["frontend/**"],
      "additionalBranchPrefix": "frontend-non-major/",
      "commitMessageSuffix": "(frontend non-major)",
      "matchUpdateTypes": ["minor"],
      "groupName": "frontend minor",
    },
    {
      "matchPaths": ["frontend/**"],
      "additionalBranchPrefix": "frontend-non-major/",
      "commitMessageSuffix": "(frontend non-major)",
      "matchUpdateTypes": ["patch"],
      "groupName": "frontend patches",
    },
    {
      "matchPaths": ["frontend/**"],
      "additionalBranchPrefix": "frontend-non-major/",
      "commitMessageSuffix": "(avoided frontend non-major)",
      "matchUpdateTypes": ["patch", "minor"],
      "matchPackageNames": ["@date-io/moment"],
      "groupName": "avoided non major",
    }
  ]
}
