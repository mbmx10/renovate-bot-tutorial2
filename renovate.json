{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":separateMajorReleases",
    ":separateMultipleMajorReleases"
  ],
  "prHourlyLimit": 10,
  "packageRules": [
    {
      "matchPaths": ["frontend/**"],
      "additionalBranchPrefix": "frontend/",
      "commitMessageSuffix": "(frontend)"
    }
  ]
}
