{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":separateMultipleMajorReleases",
    ":separateMajorReleases"
  ],
  "prHourlyLimit": 13,
  "packageRules": [
    {
      "matchPaths": ["frontend/**"],
      "additionalBranchPrefix": "frontend/",
      "commitMessageSuffix": "(frontend)",
      "rangeStrategy": "bump"
    }
  ]
}
