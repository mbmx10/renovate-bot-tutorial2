{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "prHourlyLimit": 3,
  "packageRules": [
    {
      "matchPaths": ["*"],
      "separateMajorMinor": true,
      "separateMultipleMajor": true
    },
    {
      "matchPaths": ["separate-module/**"],
      "additionalBranchPrefix": "separate-module/",
      "commitMessageSuffix": "(frontend)",
    }
  ]
}
